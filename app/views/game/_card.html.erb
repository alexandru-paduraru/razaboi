  <%= link_to play_path, remote: true do %>
  <% if symbol == '&spades;' || symbol == '&clubs;' 
        color = 'black'
    else
        color = 'red';
    end 
   %>
      <div class="card <%= view %> <%= move_class %> <%= color %>">
                <number>
                    <%= number %><br>
                    <symbol><%= raw(symbol) %></symbol>
                </number>
                <symbol class="big">
                    <%= raw(symbol) %>
                </symbol>
                <number class="invert">
                    <%= number %><br>
                    <symbol><%= raw(symbol) %></symbol>
                </number>
       </div>
   <% end %>