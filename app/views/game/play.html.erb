       <div class="container" style="margin-top:40px;">
        <div class="row">
            <div class="col-md-3">  
                <div class="game-stats">
                    <div class="header">
                        Statistici
                        
                        <% if @hash %>
                            <%= @hash %>
                        <% end %>
                    </div>
                    <div class="content">
                        <% if @pas == 0 %>
                        Cartile au fost impartite.
                        <% end %> 
                        <br>       
                            PAS :
                                <div id="pas"> <%= @pas %> </div>   
                    </div>
                    <div class="header">
                        Posesie
                    </div>
                    <div class="content">
                        <b>EU</b><br>
                        numar carti:<div id="carti1"><%= @numar1 %></div>  
                        <div id="extra_carti1"></div>
                        <b>COMPUTER</b><br>
                        numar carti:<div id="carti2"><%= @numar2 %></div>
                        <div id="extra_carti2"></div>
                    </div>
                 </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-7 playtable">
                  <div id="mesaj" class="message animated">
                    <% if @message  %> 
                    <%= @message[:info] %>
                    <% end %>
                  </div>
                  <div id="carti_existente1">
                   <% if @numar1 && @numar1 > 0 %>        
                      <% for i in 1..@numar1 %>
                         <%= render partial: 'card', locals: {view: "back", symbol: '&spades;', number: 0, move_class: "card-#{i%5}" } %>  
                      <% end %>
                   <% end %>
                 </div>
                 <div id="carte_actuala1"></div>
                 <div id="carti_existente2">  
                   <% if @numar2 && @numar2 > 0 %>
                      <% for i in 1..@numar2 %>
                         <%= render partial: 'card', locals: {view: "back", symbol: '&spades;', number: 0, move_class: "card-#{i%5} all" } %>  
                      <% end %>
                    <% end %>
                 </div>
                 <div id="carte_actuala2"></div>
            </div>   
          </div>
        </div>


            
        
